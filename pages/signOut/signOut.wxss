/* pages/signOut/signOut.wxss */
.container {
  width: 100vw;
  padding: 20rpx 30rpx 0;
}
.container .box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.container .box .avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}
.container .box .name {
  font-size: 36rpx;
  font-weight: 550;
  margin: 20rpx 0 40rpx;
}
.container .btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  letter-spacing: 10rpx;
  color: var(--Color-White);
  border-radius: 20rpx;
  background-color: var(--Color-MainA);
}
.container .signOut {
  margin-top: 20rpx;
  background-color: var(--Color-ViceA);
}
