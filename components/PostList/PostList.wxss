/* component/PostList/PostList.wxss */
.postList {
  display: flex;
  flex-direction: column;
  background-color: var(--Color-White);
}
.postList .postItem {
  display: flex;
  padding: 30rpx;
  border-bottom: 1rpx solid var(--Color-FontE);
}
.postList .postItem .userPic .image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}
.postList .postItem .content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 20rpx;
  font-size: 28rpx;
}
.postList .postItem .content .userName {
  color: var(--Color-MainB);
  font-weight: 550;
  margin-bottom: 20rpx;
}
.postList .postItem .content .text {
  letter-spacing: 3rpx;
}
.postList .postItem .content .media {
  margin: 20rpx 0;
}
.postList .postItem .content .media .image {
  max-height: 350rpx;
}
.postList .postItem .content .media .complex {
  height: 150rpx;
  width: 150rpx;
  margin: 0 10rpx 10rpx 0;
}
.postList .postItem .content .imageComplex {
  display: flex;
  flex-wrap: wrap;
}
.postList .postItem .content .location {
  color: var(--Color-MainB);
  font-size: 26rpx;
}
.postList .postItem .content .footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: var(--Color-FontA);
  font-size: 26rpx;
  font-weight: 300;
  margin-top: 20rpx;
}
.postList .postItem .content .footer .releaseTime {
  max-width: 120rpx;
  font-size: 26rpx;
}
.postList .postItem .content .footer .partition {
  max-width: 150rpx;
  color: var(--Color-FontB);
  padding: 0 20rpx;
}
.postList .postItem .content .footer .operation {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  font-size: 32rpx;
  font-weight: 400;
}
.postList .postItem .content .footer .operation .icon {
  margin-left: 10rpx;
}
.postList .postItem .content .footer .operation .icon .text {
  font-size: 28rpx;
  margin-left: 5rpx;
}
