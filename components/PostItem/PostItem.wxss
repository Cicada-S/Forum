/* components/PostItem.wxss */
.postItem {
  display: flex;
  padding: 30rpx;
  border-bottom: 1rpx solid var(--Color-FontE);
}
.postItem .userPic .image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 10rpx;
}
.postItem .content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 20rpx;
  font-size: 28rpx;
}
.postItem .content .head {
  display: flex;
  justify-content: space-between;
}
.postItem .content .head .userName {
  color: var(--Color-MainB);
  font-size: 30rpx;
  font-weight: 550;
  margin-bottom: 20rpx;
}
.postItem .content .head .icon {
  padding: 10rpx;
}
.postItem .content .text {
  letter-spacing: 3rpx;
  margin-bottom: 20rpx;
}
.postItem .content .media {
  margin-bottom: 20rpx;
}
.postItem .content .media .image {
  max-height: 350rpx;
  max-width: 500rpx;
}
.postItem .content .media .complex {
  height: 160rpx;
  width: 160rpx;
  margin: 0 10rpx 10rpx 0;
}
.postItem .content .imageComplex {
  display: flex;
  flex-wrap: wrap;
}
.postItem .content .location {
  color: var(--Color-MainB);
  font-size: 26rpx;
  margin-bottom: 20rpx;
}
.postItem .content .footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: var(--Color-FontA);
  font-size: 26rpx;
  font-weight: 300;
}
.postItem .content .footer .releaseTime {
  max-width: 130rpx;
  font-size: 26rpx;
}
.postItem .content .footer .partition {
  max-width: 230rpx;
  color: var(--Color-FontB);
  padding: 0 20rpx;
}
.postItem .content .footer .operation {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  font-size: 32rpx;
  font-weight: 400;
}
.postItem .content .footer .operation .icon {
  margin-left: 10rpx;
}
.postItem .content .footer .operation .icon .active {
  color: var(--Color-MainA);
}
.postItem .content .footer .operation .icon .text {
  font-size: 28rpx;
  margin-left: 5rpx;
}
